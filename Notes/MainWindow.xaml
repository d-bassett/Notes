<Window x:Name="Notes" x:Class="Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="Notes" Height="450" Width="800" MouseEnter="Notes_MouseEnter" MouseLeave="Notes_MouseLeave" Opacity="1" Foreground="#00000000" Background="#02000000" BorderBrush="#00000000" KeyDown="Notes_KeyDown" WindowStyle="None" SizeChanged="Notes_SizeChanged" LocationChanged="Notes_LocationChanged" AllowsTransparency="True" Icon="/HandwritingSystemToastIcon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="richTextBox" RenderTransformOrigin="0.5,0.5" Background="#02000000" Foreground="White" TextChanged="richTextBox_TextChanged" Grid.RowSpan="2">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
